<%- include('../partials/header') %>
<header class='mock-header test-bg-color'data-mocktime="<%= mock.mockTime %>" data-mockID="<%= mock._id %>" data-category="<%= mock.category%>" data-category="<%= mock.category%>"data-setNo="<%= mock.setNo%>"data-mockName="<%= mock.mockName%>">
    <div class="container">
        <div class="timer right">
            <div class="col s6 left grey-text text-darken-3">
                Time Left:
            </div>
            <div class="col s6 grey darken-3 left white-text timer-content">
                <span class="min">--</span>m : <span class="sec">--</span>s
            </div>
        </div>
    </div>
</header>
<section class="section" id="mock-area" data-mock="<%= JSON.stringify(mock.questionBody) %>">
    <div class="row padding-20">
        <p class="menu-ico-wrapper"><a href="#" class="menu-ico"><i class="material-icons black-text">arrow_circle_up</i></a></p>
        
        <div class="col s12 l8 qBody">
            
        </div>        
        <div class="col s9 l4 grey lighten-2 mock-btn-wrapper">
            <div class="row test-bg-color test-profile">
                <div class="col s4">
                    <img class="" src="<%= user.thumbnail %>" alt="" width="50">
                </div>
                <div class="col s8">
                    <p class="userID" data-id="<%=user._id%>"><%= user.username %></p>
                </div>
            </div>
            <div class="row btns-right">
                
            </div>
            <div class="divider grey"></div>
            <div class="row btn-description">
                <div class="col s6 m3 center-align">
                    <button class="btn green darken-2"></button>
                    <p>Attempted</p>
                </div>
                <div class="col s6 m3 center-align">
                    <button class="btn indigo darken-3"></button>
                    <p>Attempted & Tagged</p>
                </div>
                <div class="col s6 m3 center-align">
                    <button class="btn orange darken-1"></button>
                    <p>Tagged</p>
                </div>
                <div class="col s6 m3 center-align">
                    <button class="btn white"></button>
                    <p>Unattempted</p>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button class="btn test-bg-color grey-text text-darken-3" style="font-weight: bold;" onclick="submitMock()">Submit Test</button>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="modal1" class="modal">
    <div class="modal-content center-align">
      <h5 class="indigo-text text-darken-3">OOPS! Time is over.</h5>
      <p>Please submit the mock.</p>
    </div>
    <div class="modal-footer">
      <a href="#" class="waves-effect btn btn-medium" onclick="submitMock()">Submit</a>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/mock-test.js"></script>
<%- include('../partials/footer') %>